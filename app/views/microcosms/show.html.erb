<p id="notice"><%= notice %></p>

<%= map(:container_id => 'Map',
  :center => {
  :latlng => [@microcosm.lat, @microcosm.lon],
  :zoom => 11
}) %>
<h1>
  <%= @microcosm.name %>
</h1>

<p>
  <strong>Key:</strong> <%= @microcosm.key %>
</p>

<p>
  <strong>Members:</strong> <%= @microcosm.members_num %>
</p>

<p>
  <strong>Facebook:</strong> <a href="https://facebook.com/groups/<%=@microcosm.facebook%>">Facebook</a>
</p>

<p>
  <strong>Twitter:</strong> <a href="https://twitter.com/<%=@microcosm.twitter%>">Twitter</a>
</p>

<%= link_to 'Edit', edit_microcosm_path(@microcosm) %> |
<%= link_to 'Back', microcosms_path %>

<div id='Organizers'>
  <h2>Organizers</h2>
  <div class='organizers'>
    <% @microcosm.organizers.each do |organizer| %>
      <ul>
        <li><%= organizer.user.name %></li>
      </ul>
    <% end %>
  </div>
</div>
<%= link_to 'New', new_organizer_path(microcosm_id: 1) %>

<div id='Events'>
  <h2>Events</h2>
  <div class='events'>
    <% @microcosm.events.each do |event| %>
      <ul>
        <li><%= event.moment %> - <%= event.title %> - <%= event.location %></li>
      </ul>
    <% end %>
  </div>
</div>
<%= link_to 'New', new_event_path(microcosm_id: 1) %>

<div id='Members'>
  <h2>Members</h2>
  <div class='members'>
    <% @microcosm.members.each do |member| %>
      <ul>
        <li><%= member.user.name %></li>
      </ul>
    <% end %>
  </div>
</div>
<%= link_to 'New', new_member_path(microcosm_id: 1) %>

<div id='Changesets'>
  <h2>Changesets</h2>
  <div class='changesets'>
    <% current_changesets.each do |mc| %>
      <ul>
        <li><a href="/microcosm_changesets/<%= mc.id %>"><%= mc.changeset_id %> - <%= mc.changeset.closed_at %> - <%= mc.editor.display_name %></a></li>
      </ul>
    <% end %>
  </div>
</div>
<%= button_to 'Discover 1000', microcosms_discover_changesets_path, params: {microcosm_id: @microcosm.id, count: 1000} %>
